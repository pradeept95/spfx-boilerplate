{
  "extends": "./node_modules/@microsoft/rush-stack-compiler-4.5/includes/tsconfig-web.json",
  "compilerOptions": {
    "target": "es2015",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "inlineSources": false,
    "strictNullChecks": false,
    "noImplicitAny": false, 
    "allowSyntheticDefaultImports" : true, 

    "baseUrl": ".",
    "paths": { 
      "@app/*": [
        "./src/apps/*"
      ],
      "@common/*": [
        "./src/common/*"
      ], 
      "@assets/*": [
        "./src/assets/*"
      ], 
    },

    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@microsoft"
    ],
    "types": [
      "webpack-env"
    ],
    "lib": [
      "es5",
      "es7",
      "dom",
      "es2015",
      "es2021",
      "es2015.collection", 
    ]
  },
  "include": [ 
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
